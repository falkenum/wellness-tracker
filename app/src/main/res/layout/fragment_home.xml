<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
              android:gravity="start|center_horizontal">

    <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

    <Button android:layout_width="192dp" android:layout_height="wrap_content"
            android:text="New log entry"
            android:id="@+id/newLogEntryButton"
            android:background="@drawable/button_bg" android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_height="wrap_content" android:gravity="start" android:layout_marginStart="8dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/linearLayout">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="entries for the past "
                      android:id="@+id/textView6"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="timePeriod"
                      android:id="@+id/timePeriod"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text=": "
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/numEntriesView"
                      android:text="numEntriesview"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/averageValuesHolder"
                 android:layout_gravity="start" android:layout_marginStart="8dp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/periodLengthRadioGroup"
            android:layout_gravity="start" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">
        <RadioButton
                android:text="Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/yearButton" android:layout_weight="1"/>
        <RadioButton
                android:text="Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/monthButton" android:layout_weight="1"/>
        <RadioButton
                android:text="Week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/weekButton" android:layout_weight="1"/>
        <RadioButton
                android:text="Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/dayButton" android:layout_weight="1"/>
    </RadioGroup>

</LinearLayout>

