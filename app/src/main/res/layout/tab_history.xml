<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <com.example.meditationtimer.CalendarView android:layout_width="0dp"
                                              android:layout_height="wrap_content"
                                              app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
                                              app:layout_constraintEnd_toEndOf="parent"
                                              app:layout_constraintStart_toStartOf="parent"
                                              android:layout_marginTop="16dp" android:layout_marginStart="16dp"
                                              android:id="@+id/calendarView">

    </com.example.meditationtimer.CalendarView>
    <android.support.constraint.ConstraintLayout
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.135" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" android:id="@+id/summaryLayout">

        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalTime"
                android:textSize="24sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="16dp"/>
        <TextView
                android:text="min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
                app:layout_constraintStart_toEndOf="@+id/totalTime" android:layout_marginStart="8dp"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numRecords" app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
                android:textSize="24sp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="Total time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:textSize="24sp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="16dp"/>
        <TextView
                android:text="Number of sessions:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center" android:id="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="240dp"
                android:id="@+id/guideline"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>