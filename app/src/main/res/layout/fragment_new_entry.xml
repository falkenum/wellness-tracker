<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/dateTimeLayout"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="start">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:gravity="start">
            <TextView
                    android:text="Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"/>
            <TextView
                    android:text="Today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/dateValueView"
            />
            <Button
                    android:text="modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/modifyDateButton"
                    android:layout_gravity="end"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:orientation="horizontal">
            <TextView
                    android:text="Time:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"/>
            <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView
                    android:text="Now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/timeValueView" android:layout_weight="1"/>
            <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" android:layout_weight="1"/>
            <Button
                    android:text="modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/modifyTimeButton"/>
        </LinearLayout>
    </LinearLayout>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="1.5dp"
            android:background="?android:attr/listDivider"
            android:layout_weight="0"/>
    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
              <!--android:text="Entry type" android:id="@+id/chosenType"-->
    <!--/>-->
    <FrameLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dataInputHolder"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirmButton"
            android:layout_marginTop="16dp"/>
</LinearLayout>
