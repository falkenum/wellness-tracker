<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/new_entry_dialog_bg"
        android:orientation="vertical">


    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/new_entry_nav_host"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navGraph="@navigation/new_entry_graph" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/backCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edgeMargin"
                android:text="Cancel"
                />
        <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"/>
        <Button
                android:id="@+id/nextConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/edgeMargin"
                android:layout_marginBottom="@dimen/edgeMargin"
                android:text="Confirm" />
    </LinearLayout>


</LinearLayout>
