<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:textAppearance">@style/text</item>
        <item name="android:colorBackground">@color/appBackground</item>

    </style>

    <style name="button" >
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="text" >
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/defaultTextSize</item>
    </style>

</resources>
